{
  "[json]": {
    // More info:
    // - https://code.visualstudio.com/docs/editor/intellisense#_settings
    // - https://kittygiraudel.com/snippets/vsc-lite/
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    }
  },
  // https://code.visualstudio.com/docs/editor/intellisense#_tab-completion
  "editor.tabCompletion": "onlySnippets",
  "colorize.languages": ["json", "markdown"],
  "editor.minimap.enabled": false,
  "sortJSON.contextMenu": {
    "sortJSON": true,
    "sortJSONAlphaNum": true,
    "sortJSONAlphaNumReverse": false,
    "sortJSONKeyLength": false,
    "sortJSONKeyLengthReverse": false,
    "sortJSONReverse": false,
    "sortJSONType": false,
    "sortJSONTypeReverse": false,
    "sortJSONValues": false,
    "sortJSONValuesReverse": false
  },
  "sortJSON.orderOverride": [
    "name",
    "website",
    "colors",
    "logo_colors",
    "source",
    "last_update"
  ]
}
